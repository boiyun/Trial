<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 设置栏 -->
    <declare-styleable name="SettingBar">
        <!-- 左边 -->
        <attr name="bar_leftText" format="string" />
        <attr name="bar_leftHint" format="string" />
        <attr name="bar_leftIcon" format="reference" />
        <attr name="bar_leftColor" format="color" />
        <attr name="bar_leftSize" format="dimension" />
        <!-- 右边 -->
        <attr name="bar_rightText" format="string" />
        <attr name="bar_rightHint" format="string" />
        <attr name="bar_rightIcon" format="reference" />
        <attr name="bar_rightColor" format="color" />
        <attr name="bar_rightSize" format="dimension" />
        <!-- 分割线 -->
        <attr name="bar_lineVisible" format="boolean" />
        <attr name="bar_lineColor" format="reference|color" />
        <attr name="bar_lineSize" format="dimension" />
        <attr name="bar_lineMargin" format="dimension" />
    </declare-styleable>


    <attr name="srlStyle" format="reference" /><!--样式-->

    <attr name="srlDrawableSize" format="dimension" /><!--图片尺寸-->
    <attr name="srlDrawableArrowSize" format="dimension" /><!--箭头图片尺寸-->
    <attr name="srlDrawableProgressSize" format="dimension" /><!--箭头图片尺寸-->
    <attr name="srlDrawableMarginRight" format="dimension" /><!--图片和文字的间距-->
    <attr name="srlTextSizeTitle" format="dimension" /><!--标题字体-->
    <attr name="srlTextSizeTime" format="dimension" /><!--时间字体-->
    <attr name="srlFinishDuration" format="integer" /><!--完成时停留时间-->
    <attr name="srlPrimaryColor" format="color" /><!--主要颜色-->
    <attr name="srlAccentColor" format="color" /><!--强调颜色-->
    <attr name="srlDrawableArrow" format="reference" /><!--箭头图片-->
    <attr name="srlDrawableProgress" format="reference" /><!--转动图片-->
    <attr name="srlEnableHorizontalDrag" format="boolean" /><!--支持水平拖动-->

    <attr name="srlTextPulling" format="string" />
    <attr name="srlTextLoading" format="string" />
    <attr name="srlTextRelease" format="string" />
    <attr name="srlTextFinish" format="string" />
    <attr name="srlTextFailed" format="string" />
    <attr name="srlTextUpdate" format="string" />
    <attr name="srlTextSecondary" format="string" />
    <attr name="srlTextRefreshing" format="string" />
    <attr name="srlTextNothing" format="string" />

    <attr name="srlClassicsSpinnerStyle" format="enum">
        <enum name="Translate" value="0" /><!--平行移动-->
        <enum name="Scale" value="1" /><!--拉伸形变-->
        <enum name="FixedBehind" value="2" /><!--固定在背后-->
    </attr>

    <attr name="layout_srlSpinnerStyle" format="enum">
        <enum name="Translate" value="0" /><!--平行移动-->
        <enum name="Scale" value="1" /><!--拉伸形变-->
        <enum name="FixedBehind" value="2" /><!--固定在背后-->
        <enum name="FixedFront" value="3" /><!--固定在前面-->
        <enum name="MatchLayout" value="4" /><!--填满布局-->
    </attr>

    <declare-styleable name="PageNavigationView">
        <attr name="NavigationPaddingTop" format="dimension" />
        <attr name="NavigationPaddingBottom" format="dimension" />
    </declare-styleable>
    <declare-styleable name="TransformationLayout">
        <!-- A target view that will be transformed from TransformationLayout. -->
        <attr name="transformation_targetView" format="reference" />
        <!-- Duration of the transformation. -->
        <attr name="transformation_duration" format="integer" />
        <!-- Motion of the transformation path. -->
        <attr name="transformation_pathMode" format="enum">
            <enum name="arc" value="0" />
            <enum name="linear" value="1" />
        </attr>
        <!-- The id of the View whose overlay TransitionDrawable will be added to. -->
        <attr name="transformation_zOrder" format="integer" />
        <!-- The container color to be used as the background of the morphing container. -->
        <attr name="transformation_containerColor" format="color" />
        <!-- The all container colors (start and end) to be used as the background of the morphing container. -->
        <attr name="transformation_allContainerColor" format="color" />
        <!-- The color to be drawn under the morphing container but within the bounds of the zOrder. -->
        <attr name="transformation_scrimColor" format="color" />
        <!-- The Direction to be used by this transform. -->
        <attr name="transformation_direction" format="enum">
            <enum name="auto" value="0" />
            <enum name="entering" value="1" />
            <enum name="returning" value="2" />
        </attr>
        <!-- The FadeMode to be used to swap the content of the start View with that of the end View. -->
        <attr name="transformation_fadeMode" format="enum">
            <enum name="in" value="0" />
            <enum name="out" value="1" />
            <enum name="cross" value="2" />
            <enum name="through" value="3" />
        </attr>
        <!-- The FitMode to be used when scaling the incoming content of the end View. -->
        <attr name="transformation_fitMode" format="enum">
            <enum name="auto" value="0" />
            <enum name="width" value="1" />
            <enum name="height" value="2" />
        </attr>
        <!-- The elevation that will be used to render a shadow around the container at the start of the transition. -->
        <attr name="transformation_startElevation" format="float" />
        <!-- The elevation that will be used to render a shadow around the container at the end of the transition. -->
        <attr name="transformation_endElevation" format="float" />
        <!-- Whether shadows should be drawn around the container to approximate native elevation shadows on the start and end views. -->
        <attr name="transformation_elevationShadowEnabled" format="boolean" />
        <!-- Whether to hold the last frame at the end of the animation. -->
        <attr name="transformation_holdAtEndEnabled" format="boolean" />
    </declare-styleable>
</resources>