<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="m"
            type="com.trial.wanx.bean.GirlBean" />
    </data>


    <com.lihang.ShadowLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        app:hl_cornerRadius="15dp"
        app:hl_layoutBackground="@color/white"
        app:hl_layoutBackground_true="@color/color_f5f5f5"
        app:hl_shapeMode="pressed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="@{m.content}"
                android:textColor="@color/color_333333"
                android:textSize="16sp"
                tools:text="afdsfads" />

            <TextView
                android:id="@+id/tv_news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{m.updateTime}"
                android:textColor="@color/color_999999"
                android:textSize="14sp"
                tools:text="afdsfads" />
        </LinearLayout>
    </com.lihang.ShadowLayout>

</layout>
